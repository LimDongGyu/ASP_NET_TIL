@using TermHomePage.Models;

@model  List<TermHomePage.Models.Articles>

@{
    ViewBag.Title = "ArticleList";
    Layout = "~/Views/Shared/_HomePageLayoutPage1.cshtml";
}

<!-- Container -->
<div class="content-wrap">
    <div id="blogpost" class="inner-content">
        <section class="inner-section">
            <div class="container-fluid nopadding">
                <div class="wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
                    <div id="post-comment">
                        <h4 class="font-accident-one-light uppercase">게시글 목록</h4>
                    </div>
                    <div class="dividewhite2"></div>

                    <div class="row">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="10">
                            <thead>
                                <tr>
                                    <th data-toggle="true" data-sort-ignore="true" width="10%">순번</th>
                                    <th data-sort-ignore="true" width="10%">분류</th>
                                    <th width="20%">제목</th>
                                    <th data-hide="phone" width="20%">IP주소</th>
                                    <th data-hide="phone,tablet" width="20%">등록자</th>
                                    <th data-hide="phone" class="text-center" width="20%">가입일시</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                    int idx = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    idx = Model.Count - i;
                                    <tr>
                                        <td>@idx.ToString()</td>
                                        <td>@item.Category</td>
                                        <td><a href="/Board/Edit?aidx=@item.ArticleIDX">@item.Title</a></td>
                                        <td>@item.IPAddress</td>
                                        <td>@item.ModifyMemberID</td>
                                        <td>@Convert.ToDateTime(item.ModifyDate).ToString("yyyy.MM.dd")</td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6" stype="text-align: right;"><ul class="pagination pull-right"></ul></td>
                                    <a href="/Board/Create" class="btn btn-lg btn-lgr-str">게시글 쓰기</a>
                                </tr>
                            </tfoot>
                        </table>
                    </div>


                </div>

            </div>
            <div class="dividewhite8"></div>
        </section>
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('.footable').footable();
        });

    </script>

}
